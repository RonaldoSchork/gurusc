<h2><%= @user.full_name %></h2>

<% if can? :update, @user %>
  <%= link_to "Editar", [:edit, @user] %>
<% end %>

<span class="gravatar"><%= gravatar_image_tag @user.email %></span>

<p><%= @user.city %></p>

<% if can? :update, @user %>
  <p><%= @user.email %></p>
<% end %>

<%= content_tag :div do %>
  <% @user.projects.each do |project| %>
    <h3><%= link_to project.name, project.git, :target => '_blank' %></h3>
    <p><%= project.description %></p>
  <% end %>
<% end %>
