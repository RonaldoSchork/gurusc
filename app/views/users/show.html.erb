<%= content_tag :div, :class => "show_user" do %>

  <span class="gravatar"><%= gravatar_image_tag @user.email %></span>
  
  <h2 class="name"><%= @user.full_name %></h2>
  
  <span class="city"><%= @user.city %></span>

  <% if can? :update, @user %>
    <span class="email"><%= @user.email %></span>
  <% end %>

<% end %>

<% if can? :update, @user %>
  <%= link_to "Editar dados", [:edit, @user], :class => "user_edit" %>
<% end %>

<%= content_tag :ul, :class => "show_user_projects" do %>
  <% @user.projects.each do |project| %>
    <li>
      <h3><%= link_to project.name, project.git, :target => '_blank' %></h3>
      <p><%= project.description %></p>
    </li>
  <% end %>
<% end %>
