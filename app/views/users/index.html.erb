<h2>Encontre aqui os profissionais de Ruby e Rails de Santa Catarina</h2>

<% if @users.present? %>
  <ul class="list_user">
    <% @users.each do |user| %>
      <%= content_tag_for :li, user, :class => cycle(:odd, :even) do %>
      
        <span class="gravatar"><%= gravatar_image_tag user.email %></span>
        
        <span class="name"><%= link_to "#{user.full_name}", user %></span>
        
        <span class="city"><%= user.city %></span>
        
        <span class="project">
          <% if user.number_of_projects > 0 %>
            <%= link_to "#{user.number_of_projects} projetos open source", user %>
          <% else %>
            Nenhum projeto open source
          <% end %>
        </span>
        
      <% end %>
    <% end %>
  </ul>
<% end %>


<% unless user_signed_in? %>
  <div class="bar">
    <%= link_to_new new_user_path, :class => "right" %>
  </div>
<% end %>
