<%= form_for [:admin, @category] do |f| %>
  
  <%= error_messages_for @category %>

  <div class="field">
    <%= f.text_field :name, :placeholder => "Nome da categoria" %>
  </div>
  <div class="actions">
    <%= f.submit "Submeter", :class => "button" %> ou <%= link_to "Cancelar", admin_post_categories_path %>
  </div>
  
<% end %>
