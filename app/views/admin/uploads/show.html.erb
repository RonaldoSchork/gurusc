<div class="upload">
  <div class="preview">
    <%= link_to image_tag(@upload.document.url(:medium)), @upload.document.url, :target => "_blank" %>
  </div>

  <div class="info">
    <p>
      <b>Título:</b>
      <%= @upload.title %>
      <span class="hint">
        (<%= number_to_human_size @upload.document_file_size %>)
        <%= @upload.document_content_type %>
      </span>
    </p>

    <p>
      <b>Descrição:</b>
      <%= @upload.description %>
    </p>

    <hr />

    <p>
      <%= link_to 'Editar', edit_admin_upload_path(@upload), :class => "button" %>
      <%= link_to 'Voltar', admin_uploads_path, :class => "button" %>
    </p>
  </div>
</div>

