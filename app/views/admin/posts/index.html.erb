<h2>Posts</h2>

<%- if @posts.present? -%>
<ul class="list">
  <% @posts.each do |post| %>
    <%= content_tag_for :li, post, :class => cycle(:odd, :even) do %>
      <%= link_to post.title, [:admin, post] %>

      <div class="right">
        <%= link_to_edit [:edit, :admin, post] %>,
        <%= link_to_destroy [:admin, post] %>
      </div>
    <% end %>
  <% end %>
</ul>
<%- else -%>
  <p>Ainda não há posts</p>
<%- end -%>

<hr />

<div class="bar">
  <div class="right">
    <%= link_to 'Novo post', new_admin_post_path, :class => "button" %>
  </div>
</div>
