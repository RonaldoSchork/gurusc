<div id="column2">

  <h3>Pesquisa</h3>

  <%= form_tag posts_path, :method => :get do %>
    <%= text_field_tag :search, "",
          :size => 30,
          :type => "search",
          :class => "search-field" %>
  <% end %>

  <h3>Categorias</h3>

  <ul class="squared">
    <% @categories.each do |category| %>
      <li><%= link_to_unless_current category.name, posts_path(:category_id => category.id) %></li>
    <% end %>
  </ul>

  <h3>Novidades?</h3>

  <ul class="squared">
    <li><%= link_to "Sigam-nos no Twitter", "http://twitter.com/gurusc", :target => "_blank" %></li>
    <li><%= link_to "Assine nosso feed", posts_path(:format => :atom) %></li>
    <li><%= link_to "Entre no groups", "http://groups.google.com.br/group/guru-sc", :target => "_blank" %></li>
  </ul>
</div>

