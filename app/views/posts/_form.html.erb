<%= form_for(@post) do |f| %>

  <%= error_messages_for @post %>
  
  <div class="field">
    <%= f.label :author_id, "Author" %><br />
    <%= f.collection_select :author_id, @authors, :id, :full_name %>
  </div>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :excerpt %><br />
    <%= f.text_area :excerpt %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%- @categories.each do |c| -%>
      <%= check_box_tag "post[category_ids][]", c.id, @post.categories.include?(c) %>
      <%= c.name %>
    <%- end -%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
