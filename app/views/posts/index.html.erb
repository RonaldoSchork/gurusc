<div id="column1">
  <%- if @posts.present? -%>
    <%- @posts.each do |post| -%>
      
      <h2><%= link_to post.title.titleize, post %></h2>
      
      <div id="post">
        <%= simple_format post.body %>
      </div>
      
      <hr/>
      
    <%- end -%>
    
  <%- else -%>
    <p>Well start posting soon.</p> 
  <%- end -%>
</div>
