<!DOCTYPE html>
<html>
<head>
  <title>Guru SC</title>
  <%= stylesheet_link_tag "application", "scaffold" %>
  <%= javascript_include_tag "lib/jquery", "rails" %>
  <%= csrf_meta_tag %>
</head>
<body>

  <div id="wrapper">
    <div id="header">
      <h1>
        <span>Gurusc</span>
      </h1>

      <div id="main-nav">
        <ul>
          <li><%= link_to 'home', root_path %></li>
          <li><%= link_to 'blog', posts_path %></li>
          <li><a href="/">encontros</a></li>
          <li><a href="/">membros</a></li>
          <li><a href="/">projetos</a></li>
        </ul>
      </div>
    </div>

    <div id="content">
      <%= flash_messages %>

      <%= yield %>
    </div>
  </div>

  <%= yield :bottom %>
</body>
</html>
